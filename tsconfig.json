{
  "compilerOptions": {
    "target": "ESNext", // Set the ECMAScript target
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/shared/types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"],
      "@app/*": ["src/app/*"],
      "@static-featues/*": ["src/features/static/*"],
      "@dynamic-features/*": ["src/features/modules/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/**/*",
    "config/**/*"
  ],
  "exclude": ["node_modules"]
}
